                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:padding="10dp"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/favourites_icon"
                                app:layout_constraintHorizontal_bias="0.257"
                                app:layout_constraintVertical_bias="0.791"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="395dp"
                            android:layout_height="64dp"
                            android:id="@+id/location_const">

                        <ImageView
                                android:src="@drawable/location_mape"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/location_icon"
                                android:layout_weight="1"
                                app:layout_constraintBottom_toBottomOf="@+id/location_txt"
                                app:layout_constraintTop_toTopOf="@+id/location_txt"
                                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.128"
                                app:layout_constraintVertical_bias="0.615"/>
                        <TextView
                                android:text="localisation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="20dp"
                                android:id="@+id/location_txt"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:padding="10dp"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/location_icon"
                                app:layout_constraintHorizontal_bias="0.178"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="393dp"
                            android:layout_height="74dp"
                            android:id="@+id/logout_const">

                        <ImageView
                                android:src="@drawable/logout_out"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:id="@+id/logout_icon"
                                android:layout_weight="1"
                                app:layout_constraintBottom_toBottomOf="@+id/logout_txt"
                                app:layout_constraintTop_toTopOf="@+id/logout_txt"
                                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.128"
                                app:layout_constraintVertical_bias="0.615"/>
                        <TextView
