<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_margin="10dp"
        android:background="@drawable/setting_background"
        android:id="@+id/constraint_categorie"
>

    <ImageView android:layout_width="107dp"
               android:layout_height="87dp"
               android:src="@drawable/e_commerce"
               android:contentDescription="categorie image "
               android:id="@+id/imageUrl"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintHorizontal_bias="0.017"
               app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Hebergement Web"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageUrl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:src="@drawable/back"
            android:layout_width="40dp"
            android:rotation="180"
            android:layout_height="40dp"
            android:id="@+id/imageGo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.491"
            android:layout_marginEnd="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>