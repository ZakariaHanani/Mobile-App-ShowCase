<?xml version="1.0" encoding="utf-8"?>
    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Fragments.HomeFragment">
    <ProgressBar
            android:id="@+id/idPB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView3"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="80dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradiant_color_home">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                    <TextView
                            android:text="Zakaria Hanani "
                            android:textSize="27sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/nom_person"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView4"
                            android:layout_marginStart="48dp"
                            app:layout_constraintVertical_bias="0.071"/>
                    <TextView
                            android:text="Welcome back"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="116dp"
                            android:layout_height="18dp"
                            android:id="@+id/textView4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="16dp"
                            app:layout_constraintVertical_bias="0.219"/>
                    <ImageView
                            android:src="@drawable/baseline_settings_24"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:id="@+id/setting"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintStart_toStartOf="@+id/textView4"
                            app:layout_constraintHorizontal_bias="0.966"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/textView6"
                        android:text="Catalogue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                <TextView
                        android:text="Voir tous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/voir_catalogue"
                        android:textColor="@color/dark_orange_vala"
                        android:textSize="16sp"
                        android:textStyle="italic"
                />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerCatalogue"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
            />


            <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/categorie"
                        android:text="Categorie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                <TextView
                        android:text="Voir tous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/voir_categorie"
                        android:textColor="@color/dark_orange_vala"
                        android:textSize="16sp"
                        android:textStyle="italic"
                />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerCategorie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
            />


            <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/blog"
                        android:text="Blog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                <TextView
                        android:text="Voir tous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/voir_blog"
                        android:textColor="@color/dark_orange_vala"
                        android:textSize="16sp"
                        android:textStyle="italic"
                />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerBlog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
            />
        </LinearLayout>
    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
