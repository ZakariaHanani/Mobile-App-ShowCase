<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activites.ApropreNous">
    <ImageView
            android:layout_width="421dp"
           android:layout_marginBottom="10dp"
            android:layout_height="280dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout3" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:lineSpacingMultiplier="1.2"
                    android:padding="16dp"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="10dp"
                    android:text="@string/proprenous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView9"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
            android:id="@+id/visitFacebookTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visiter Facebook"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/visitYouTubeTextView"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/blue"
            android:padding="12dp"

            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="148dp"/>
    <TextView
            android:id="@+id/visitSiteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visiter Notre Site"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/blue_profile"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/visitYouTubeTextView"/>
    <TextView
            android:id="@+id/visitYouTubeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visiter YouTube"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/visitSiteTextView"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/holo_red_dark"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/visitFacebookTextView"/>
    <TextView
            android:text="@string/copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="10dp"
            android:id="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>